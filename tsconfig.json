{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "CommonJS", 
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "jsx": "react",
      "noEmit": false,
      "types": ["react", "react-dom"]  
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.css"  
    ]
}
